= form_for(@tag) do |f| 
  - if @tag.errors.any?
    #error_explanation
      %h2 #{pluralize(@tag.errors.count, "error")} prohibited this tag from being saved:

      %ul
      - @tag.errors.full_messages.each do |msg|
        %li= msg 

  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :type
    %br/
    = collection_select :tag,:type_id,@types,:id,:name
  .field
    %label Parent
    %br/
    %select{:name=>"tag[parent]"}
      %option{:value=>0} ---
      - @tags.each do |t|
        %option{:value=>t.id}= t.name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .actions
    = f.submit
